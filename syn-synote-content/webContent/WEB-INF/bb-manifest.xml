<?xml version="1.0" encoding="ISO-8859-1"?>
<manifest>
  <!-- core extension information -->
    <plugin>
        <name value= "Synote Content Plugin"/>
        <handle value= "synote-content"/>
        <description value= "Allows instructors to share links to Synote recordings on the relevant course pages."/>
        <version value= "1.0.0"/>
        <requires>
            <bbversion value="9.0"/>
        </requires>
        <vendor>
            <id value="syn"/>
            <name value="GDP Group 18, ECS, University of Southampton"/>
            <url value="http://www.soton.ac.uk" />
            <description value="A group design project working on integrating the Synote service with Blackboard and Panopto" />
        </vendor>
        
<!--    These two JSPs are displayed when the "remove" and "properties" buttons --> 
<!--	are pressed on the Building Blocks administration page. 				-->
<!--    <http-actions>
            <config value="admin/configure.jsp"/>
            <remove value="admin/remove.jsp"/>
        </http-actions>
 -->    
        <http-actions><config value="Settings.jsp"></config></http-actions><application-defs>
            <application handle="synote-content-tool" type="course" name="Synote Content Course Tool">
                <description lang="en_US">Synote Course Tool</description>
                <links>
                    <link>
                        <type value="tool"/>
                        <name value="Synote tool"/>
                        <url value="Content.jsp" />
                        <description value="The Synote course Tool" />
                        <icons>
                        	<listitem value="images/synote_logo.png"/>
                        </icons>
                    </link>
                </links>
            </application>
        </application-defs>

<!-- Portal Module Definitions -->
        <module-defs>
        </module-defs>
<!--  Custom Content Types -->
        <content-handlers>
        </content-handlers>

<!-- code permissions required for proper operation -->
        <permissions>
            <permission type="attribute" name="user.authinfo" actions="get"/>
            <permission type="attribute" name="user.personalinfo" actions="get,set"/>
            <permission type="socket" name="*" actions="resolve,connect" />
        </permissions>

    </plugin>

</manifest>